    <%= f.label :course_number %><br>
    <%= f.text_field :course_number %>
  </div>
  <div class="field">
    <%= f.label :course_hours %><br>
    <%= f.number_field :course_hours %>
  </div>
  <div class="actions">
    <%= f.submit "Create Submission", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
