                                  ['MGT'],['MARE'],['MKT'],['MATH'],['MSL'],['MUS'],['NRES'],['NURS'],['PHPS'],['PHPP'],
                                  ['PHIL'],['PHYS'],['PPTH'],['PPHY'],['POLS'],['PSY'],['QBA'],['SOC'],['SOIL'],['SPAN'],
                                  ['TOUR'],['CBES'],['UNIV'],['WS']] %>
  </div>
